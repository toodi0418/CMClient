{
  "name": "meshtastic-tcp-client",
  "version": "0.2.20",
  "private": true,
  "description": "簡易 Meshtastic TCP 封包擷取與解析工具",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "node src/index.js",
    "desktop": "node scripts/run-electron.js src/electron/main.js",
    "build:win": "node scripts/build-win.js",
    "build:linux": "node scripts/build-linux.js",
    "build:mac-cli": "pkg src/index.js --config package.json --targets node18-macos-x64 --compress Brotli --public --output dist/cli/tmag-cli"
  },
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "chart.js": "^4.4.4",
    "protobufjs": "^7.2.5",
    "serialport": "^11.0.1",
    "unishox2.siara.cc": "^1.1.5",
    "ws": "^8.18.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-packager": "^17.1.2",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "proto/**/*"
    ]
  }
}
